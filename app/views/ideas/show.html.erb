<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @idea.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @idea.description %>
</p>

<p>
  <strong>Picture:</strong>
  <%= image_tag @idea.picture %>
</p>

<h4>Comments</h4>
<ul>
	<% @idea.comments.each do |comment| %>
		<li>
			<p> Username: </p>	
			<%= comment.user_name %>
			<p> Body: </p>
			<%=comment.body %>
		</li>
	<% end %>
</ul>	

<br>
<br>

<%= form_for Comment.new do |f| %>
	<%= f.hidden_field	:idea_id, value: @idea.id %>
	<%= f.label "Tell me who you are:" %>
	<%= f.text_field :user_name %>
	<%= f.label	:text_field %>
	<br>

	<%= f.label :body %>
	<%= f.text_field :body %>
	<%= f.submit "Comment", class: "btn btn-success" %>
<% end %>

<%= link_to 'Edit', edit_idea_path(@idea) %> |
<%= link_to 'Back', ideas_path %>
